<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_view_form_preview" model="ir.ui.view">
        <field name="name">stock.picking.view.form.preview</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_preview_delivery_slip" type="object" icon="fa-eye">
                        <span class="o_stat_text">Preview Delivery Slip</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
